<odoo>
    <template id="account_pnd1g_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="article o_report_pnd1g_bg">
                    <div class="row" style="font-size: 18px;position: absolute;left:86mm;top:55mm;width:160mm;">
                        <div class="col-7">
                            <div t-if="doc.partner_id.vat">
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[0]"/></span>
                                <span style="margin-left: 5mm;"><t t-esc="doc.partner_id.vat[:1]"/></span>
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[1:2]"/></span>
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[2:3]"/></span>
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[3:4]"/></span>
                                <span style="margin-left: 4mm;"><t t-esc="doc.partner_id.vat[4:5]"/></span>
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[5:6]"/></span>
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[6:7]"/></span>
                                <span style="margin-left: 1mm;"><t t-esc="doc.partner_id.vat[7:8]"/></span>
                                <span style="margin-left: 2mm;"><t t-esc="doc.partner_id.vat[8:9]"/></span>
                                <span style="margin-left: 5mm;"><t t-esc="doc.partner_id.vat[9:10]"/></span>
                                <span style="margin-left: 1mm;"><t t-esc="doc.partner_id.vat[10:11]"/></span>
                                <span style="margin-left: 5mm;"><t t-esc="doc.partner_id.vat[11:12]"/></span>
                            </div>
                            <div style="position: absolute;float: right;top:15mm;left:62mm;">
                                <t t-if="doc.partner_id.pnd_branch">
                                    <span style="margin-right: 2mm;" t-esc="doc.partner_id.pnd_branch[0]"/>
                                    <span style="margin-right: 2mm;" t-esc="doc.partner_id.pnd_branch[1]"/>
                                    <span style="margin-right: 2mm;" t-esc="doc.partner_id.pnd_branch[2]"/>
                                    <span style="margin-right: 2mm;" t-esc="doc.partner_id.pnd_branch[3]"/>
                                    <span style="margin-right: 1mm;" t-esc="doc.partner_id.pnd_branch[4]"/>
                                </t>
                            </div>
                            <div style="position: absolute;top:23mm;left:-50mm;">
                                <span t-field="doc.partner_id.name"/>
                            </div>
                            <div style="top:31mm;left:-26mm;position: absolute;">
                                <span t-field="doc.partner_id.local_thai_building"/>
                            </div>
                            <div style="position: absolute;top:31mm;left:20mm;">
                                <span t-field="doc.partner_id.local_thai_room"/>
                            </div>
                            <div style="position: absolute;top:31mm;left:38mm;">
                                <span t-field="doc.partner_id.local_thai_floor"/>
                            </div>
                            <div style="top:31mm;left:63mm;position: absolute;">
                                <span t-field="doc.partner_id.local_thai_village"/>
                            </div>
                            <div style="top:39mm;left:-36mm;position: absolute;">
                                <span t-field="doc.partner_id.local_thai_number"/>
                            </div>
                            <div style="top:39mm;left:4mm;position: absolute;">
                                <span t-field="doc.partner_id.local_thai_moo"/>
                            </div>
                            <div style="top:39mm;left:34mm;position: absolute;">
                                <span t-field="doc.partner_id.local_thai_alley"/>
                            </div>
                            <div style="top:46mm;left:-40mm;position: absolute;">
                                <span t-field="doc.partner_id.local_thai_road"/>
                            </div>
                            <div style="top:46mm;left:36mm;position: absolute;">
                                <span t-field="doc.partner_id.local_street2"/>
                            </div>
                            <div style="top:54mm;left:-30mm;position: absolute;">
                                <span t-field="doc.partner_id.local_city"/>
                            </div>
                            <div style="top:54mm;left:34mm;position: absolute;">
                                <span t-field="doc.partner_id.local_state"/>
                            </div>
                            <div style="top:61mm;left:-25mm;position: absolute;">
                                <t t-if="doc.partner_id.local_zip">
                                    <span t-esc="doc.partner_id.local_zip[0]"/>
                                    <span style="margin-left:2mm;" t-esc="doc.partner_id.local_zip[1]"/>
                                    <span style="margin-left:2mm;" t-esc="doc.partner_id.local_zip[2]"/>
                                    <span style="margin-left:2mm;" t-esc="doc.partner_id.local_zip[3]"/>
                                    <span style="margin-left:1mm;" t-esc="doc.partner_id.local_zip[4]"/>
                                </t>
                            </div>
                        </div>
                        <div class="col-5">
                            <div style="top:11mm;position: absolute;left:178mm;">
                                <span t-esc="doc.vat_year"/>
                            </div>
                            <div style="top:43mm;position: absolute;left:98mm;">
                                <span t-if="doc.normal_confirm">✔</span>
                            </div>
                            <div style="position: absolute;left:140mm;top:43mm;">
                                <span t-if="doc.further_confirm">✔</span>
                            </div>
                            <div style="position: absolute;left:188mm;font-size: 16px;top:43mm;">
                                <span t-esc="doc.further_time"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:120mm;">
                        <div class="col-7" style="font-size: 24px;">
                            <div style="position: absolute;top:45mm;left:135mm;">
                                <span t-if="doc.attachment">✔</span>
                            </div>
                            <div style="position: absolute;top:55mm;left:135mm;">
                                <span t-if="doc.recording">✔</span>
                            </div>
                        </div>
                        <div class="col-5" style="font-size: 16px;">
                            <div style="position: absolute;top:47mm;left:262mm;">
                                <span style="margin-" t-esc="doc.attachment_qty"/>
                            </div>
                            <div style="position: absolute;top:55mm;left:262mm;">
                                <span t-esc="doc.recording_qty"/>
                            </div>
                            <div style="position: absolute;top:64mm;left:236mm;">
                                <span t-esc="doc.register_number"/>
                            </div>
                            <div style="position: absolute;top:70mm;left:250mm;">
                                <span t-esc="doc.register_ref"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:140mm;font-size: 18px;">
                        <div class="col-6"/>
                        <div class="col-6">
                            <div style="position: absolute;top:80mm;right:130mm;">
                                <span t-esc="doc.general_wages_qty"/>
                            </div>
                            <div style="position: absolute;top:80mm;right:77mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.general_total_income)"/>
                            </div>
                            <div style="position: absolute;top:80mm;right:32mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.general_vat)"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:160mm;">
                        <div class="col-6" style="font-size: 16px;">
                            <div style="position:absolute;top:86mm;left:68mm;">
                                <span t-esc="doc.according"/>
                            </div>
                            <div style="position:absolute;top:86mm;left:110mm;">
                                <span t-esc="doc.according_date.strftime('%d/%m/%Y')"/>
                            </div>
                        </div>
                        <div class="col-6">
                            <div style="position: absolute;top:86mm;right:130mm;font-size: 18px;">
                                <span t-esc="doc.according_qty"/>
                            </div>
                            <div style="position: absolute;top:86mm;right:77mm;font-size: 18px;">
                                <span t-esc="'{0:,.2f}'.format(doc.according_total_income)"/>
                            </div>
                            <div style="position: absolute;top:86mm;right:32mm;font-size: 18px;">
                                <span t-esc="'{0:,.2f}'.format(doc.according_vat)"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:170mm;font-size: 18px;">
                        <div class="col-6"/>
                        <div class="col-6">
                            <div style="position: absolute;top:93mm;right:130mm;">
                                <span t-esc="doc.one_time_qty"/>
                            </div>
                            <div style="position: absolute;top:93mm;right:77mm;">
                                <span style="margin-left:-5mm;" t-esc="'{0:,.2f}'.format(doc.one_time_total_income)"/>
                            </div>
                            <div style="position: absolute;top:93mm;right:32mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.one_time_vat)"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:180mm;font-size: 18px;">
                        <div class="col-6"/>
                        <div class="col-6">
                            <div style="position: absolute;top:92mm;right:130mm;">
                                <span t-esc="doc.in_country_qty"/>
                            </div>
                            <div style="position: absolute;top:92mm;right:77mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.in_country_total_income)"/>
                            </div>
                            <div style="position: absolute;top:92mm;right:32mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.in_country_vat)"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:190mm;font-size: 18px;">
                        <div class="col-6"/>
                        <div class="col-3">
                            <div style="position: absolute;top:90mm;right:130mm;">
                                <span t-esc="doc.out_country_qty"/>
                            </div>
                            <div style="position: absolute;top:90mm;right:77mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.out_country_total_income)"/>
                            </div>
                            <div style="position: absolute;top:90mm;right:32mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.out_country_vat)"/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="position: relative;top:200mm;font-size: 18px;">
                        <div class="col-6"/>
                        <div class="col-6">
                            <div style="position: absolute;top:89mm;right:130mm;">
                                <span t-esc="doc.sum_qty"/>
                            </div>
                            <div style="position: absolute;top:89mm;right:77mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.sum_total_income)"/>
                            </div>
                            <div style="position: absolute;top:89mm;right:32mm;">
                                <span t-esc="'{0:,.2f}'.format(doc.sum_vat)"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>


    <record id="account_pnd1g_report_paper" model="report.paperformat">
        <field name="name">PND1G</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="disable_shrinking" eval="True"/>
        <field name="dpi">96</field>
    </record>

    <record id="account_pnd1g_report_action" model="ir.actions.report">
        <field name="name">PND1G</field>
        <field name="model">account.pnd1g</field>
        <field name="report_name">account_invoice.account_pnd1g_report_document</field>
        <field name="report_file">account_invoice.account_pnd1g_report_document</field>
        <field name="report_type">qweb-pdf</field>
        <field name="print_report_name">('PND1G - %s' % (object.name))</field>
        <field name="paperformat_id" ref="account_invoice.account_pnd1g_report_paper" />
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>