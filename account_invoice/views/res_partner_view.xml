<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">view.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
<!--                <field name="branch" string="Branch"/>-->
                <field name="use_pnd_address" string="Address For PND, PP"/>
                <field name="pnd_branch" string="สาขา" invisible="use_pnd_address == False"/>
                <field name="pnd_address" string="ที่อยู่ : อาคาร" invisible="use_pnd_address == False"/>
                <field name="pnd_room_number" string="ห้องเลขที่" invisible="use_pnd_address == False"/>
                <field name="pnd_floor" string="ชั้นที่" invisible="use_pnd_address == False"/>
                <field name="pnd_village" string="หมู่บ้าน" invisible="use_pnd_address == False"/>
                <field name="pnd_address_number" string="เลขที่" invisible="use_pnd_address == False"/>
                <field name="village_village" string="หมู่ที่" invisible="use_pnd_address == False"/>
                <field name="alley_alley" string="ตรอก/ซอย" invisible="use_pnd_address == False"/>
                <field name="pnd_street" string="ถนน" invisible="use_pnd_address == False"/>
                <field name="pnd_district" string="ตำบล/แขวง" invisible="use_pnd_address == False"/>
                <field name="pnd_district2" string="อำเภอ/เขต" invisible="use_pnd_address == False"/>
                <field name="pnd_province_province" string="จังหวัด" invisible="use_pnd_address == False"/>
                <field name="pnd_zip_code" string="รหัสไปรษณีย์" invisible="use_pnd_address == False"/>
            </xpath>
        </field>
    </record>
</odoo>